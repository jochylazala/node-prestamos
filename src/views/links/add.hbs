<div class='container p-4'>
	<div class="row">
		<div class="col-md-6 mx-auto">
			<div class="card">
				<div class="card-body">
					<form action="/links/add" method="post">
						<div class="form-group">
							<div class="input-group">
								<input type="text" class="form-control" placeholder="nombre" name="fullname" required autofocus>
								<span class="input-group-addon">--</span>
								<input type="text" class="form-control" placeholder="cedula" name="cedula" required>
							</div>
						</div>
						<div class="form-group">
							<div class="input-group">
								<input type="text" class="form-control" placeholder="numero de contactno" name="telefono" required>
								<span class="input-group-addon">--</span>
								<input type="text" class="form-control" placeholder="cantidad" id="cantidad" name="cantidad" required>
							</div>
						</div>
						<div class="form-group">
							<div class="input-group">
								<input type="text" class="form-control" name="semanas" id="semanas" required readonly>
								<span class="input-group-addon">--</span>
								<input type="date" class="form-control" required name="fecha">
							</div>
						</div>
						<div class="form-group">
							<div class="input-group">
								<input type="text" class="form-control" required id="cantidadpagada" placeholder="cantidad pagada" name="cantidadpagada" readonly>
								<span class="input-group-addon">--</span>
								<input type="text" class="form-control" required id="cantidadnopagada" placeholder="cantidad no pagada" name="cantidadnopagada" readonly>
							</div>
						</div>
						<div class="form-group">
							<div class="input-group">
								<input type="text" name="pagoporsemanas"  id="pagoporsemanas" class="form-control" required placeholder="pago por semanas" readonly>
								<span class="input-group-addon">--</span>
								<input type="text" name="semanaspagadas" id="semanaspagadas" class="form-control" required placeholder="semanas pagadas" >
							</div>
						</div>
						<div class="form-group">
							<div  class="input-group">
								<input type="text" name="semanasnopagadas" id="semanasnopagadas" class="form-control" placeholder="semanas no pagadas" required readonly>
								<span class="input-group-addon">--</span>
								<input type="text" name="totalpagar" class="form-control" id="totalpagar" required placeholder="total a pagar" readonly>
							</div>
						</div>
						<div class="form-group">
							<div class="input-group">
								<input type="text" name="abono" placeholder="abono" id="abono" class="form-control" required>
								<span class="input-group-addon">--</span>
								<input type="date" name="ultimopago" class="form-control" required>
							</div>
						</div>
						<div class="form-group">
							<div class="input-group">
								<input type="text" name="semanasatrasadas" class="form-control" required placeholder="semanas atrasadas">
								<span class="input-group-addon">--</span>
								<input type="button" onclick="checkValue()" value="Aplicar Abono">
							</div>
						</div>
						<div class="form-group">
							<button  class="btn btn-success btn-block">Submit</button>
						</div>

					</form>
				</div>
			</div>
		</div>
	</div>
</div>

<script>
setInterval(function(){
var cantidad = parseFloat(document.getElementById("cantidad").value);
console.log("cantidad " + cantidad);
var resultado = cantidad * 0.10;
document.getElementById("pagoporsemanas").value = resultado + " pago por semanas";
total = resultado * 13;
document.getElementById('totalpagar').value = total + " total a pagar";
//total de semanas
document.getElementById('semanas').value = 13 + " semanas";
semanaspagadas = document.getElementById("semanaspagadas").value;
document.getElementById("semanasnopagadas").value = 13 - semanaspagadas + " semanas no pagadas";
pagada = semanaspagadas * resultado;
document.getElementById("cantidadpagada").value = pagada + " cantidad pagada";
document.getElementById("cantidadnopagada").value = total - pagada + " cantidad no pagada";
	
},1000);

function checkValue(){


	var valor = parseFloat(document.getElementById("cantidad").value);
	var abono = parseInt(document.getElementById('abono').value);
    var x = (abono *10)/valor ;
    console.log(x + "valor x")
    s = parseInt(document.getElementById('semanaspagadas').value)
    console.log(s + 'semanas pagadas')
    y = s + x
    console.log(y + " valor cierto")
     parseInt(document.getElementById('semanaspagadas').value = y)
}


</script>